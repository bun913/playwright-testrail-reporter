{
  "name": "@bun913/playwright-testrail-reporter",
  "author": "bun913",
  "homepage": "https://github.com/bun913/playwright-testrail-reporter",
  "description": "A Playwright reporter that integrates with TestRail to report test results.",
  "private": false,
  "version": "0.9.5",
  "type": "module",
  "main": "./dist/index.es.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "format": "biome format --write ./src",
    "test": "vitest ./test --reporter=verbose --coverage",
    "test:ci": "vitest run ./test --silent --coverage --reporter=verbose"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.10",
    "@vitest/coverage-v8": "^3.0.9",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@playwright/test": "^1.51.1",
    "axios": "^1.8.3"
  }
}
